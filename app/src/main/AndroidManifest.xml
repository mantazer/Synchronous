<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.synchronous" >
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NewUserActivity"
                  android:label="@string/quick_setup"
                  android:windowSoftInputMode="adjustPan"
                  android:parentActivityName=".LoginActivity"/>

        <activity android:name=".MyCardActivity"
                  android:label="@string/my_card"/>

        <activity android:name=".FindCardsActivity"
                  android:label="@string/find_cards"
                  android:parentActivityName=".MyCardActivity"/>

        <activity android:name=".SavedCardsActivity"
                  android:label="@string/saved_cards"
                  android:parentActivityName=".MyCardActivity"/>
    </application>

</manifest>
